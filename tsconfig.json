{
    "compilerOptions": {
        "target": "ESNext", // Chọn phiên bản JS hiện đại với các tính năng mới.
        "module": "ESNext", // Node.js hỗ trợ ESM module (mới từ TypeScript 5.x).
        "moduleResolution": "Bundler", // Cách Node.js xử lý module ESM.
        "strict": true, // Bật kiểm tra chặt chẽ (strict mode).
        "esModuleInterop": true, // Hỗ trợ import các CommonJS module như `import express from 'express'`.
        "forceConsistentCasingInFileNames": true, // Đảm bảo consistency giữa file và casing.
        "skipLibCheck": true, // Bỏ qua kiểm tra các file declaration (.d.ts).
        "resolveJsonModule": true, // Cho phép import file JSON.
        "rootDir": "src", // Nơi chứa source code TypeScript.
        "outDir": "dist", // Nơi xuất JavaScript sau khi build.
        "typeRoots": ["./node_modules/@types"], // Tự động tìm và sử dụng types trong thư mục này.
        "types": ["node"], // Bao gồm type Node.js.
        "lib": ["ES2022", "DOM"], // Bao gồm các API JS hiện đại và DOM nếu cần.
        "allowSyntheticDefaultImports": true, // Cho phép import default mà không cần `default`.
        "noImplicitAny": false, // (Tùy chọn) Bật/tắt lỗi cho các giá trị không khai báo kiểu `any`.
        "incremental": true, // Tăng tốc độ build lại bằng cách lưu trạng thái build.
        "allowImportingTsExtensions": true,

        "baseUrl": ".", // Cấu hình cơ sở cho các alias.
        "paths": {
            "@src/*": ["src/*"],
            "@config/*": ["src/configs/*"],
            "@constant/*": ["src/constants/*"],
            "@controller/*": ["src/controllers/*"],
            "@model/*": ["src/models/*"],
            "@route/*": ["src/routes/*"],
            "@service/*": ["src/services/*"],
            "@util/*": ["src/utils/*"]
        }
    },
    "ts-node": {
        "esm": true,
        "require": ["tsconfig-paths/register"]
    },
    "files": ["src/type.d.ts"], // Các file dùng để defined global type cho dự án
    "include": ["src/**/*"], // Đường dẫn include cho các file cần build
    "exclude": ["node_modules", "dist"] // Bỏ qua thư mục không cần thiết.
}
