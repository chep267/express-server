{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "dist",  // Biên dịch vào thư mục `dist`
        "rootDir": "src",
        "baseUrl": ".", // Cấu hình cơ sở cho các alias.
        "paths": {
            "@src/*": ["src/*"],
            "@config/*": ["src/configs/*"],
            "@constant/*": ["src/constants/*"],
            "@controller/*": ["src/controllers/*"],
            "@model/*": ["src/models/*"],
            "@route/*": ["src/routes/*"],
            "@service/*": ["src/services/*"],
            "@util/*": ["src/utils/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
